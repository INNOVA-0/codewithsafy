<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tooolbar"
            app:title="Fitness Pack"
            android:background="@color/colorapp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIET PLAN FOR WEIGHT GAIN"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forwardarrowday1"
            android:layout_width="79dp"
            android:layout_height="38dp"
            android:src="@drawable/arrowforwardfordiet"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="355dp"
            ></ImageView>
        <ImageView
            android:id="@+id/backarrowday2"
            android:layout_width="79dp"
            android:layout_height="38dp"
            android:src="@drawable/arrowbackfordiet"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="-1dp"
            ></ImageView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 6"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="160dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Breakfast"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="6 Eggs Omelet + Chapatti + Milk Tea "
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="38dp"
                    android:paddingLeft="6dp"
                    android:src="@drawable/z">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Mid Morning Snack"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Yogurt Strawberry Shake    "

                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="38dp"
                    android:paddingLeft="6dp"
                    android:src="@drawable/x1"></ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Lunch"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Brown Rice + Cutlus + Yogurt    "
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/x2">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:text="Dinner"  android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Yogurt Fruit Salad + Peanut Butter Toast  "
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>
                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/x3">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Bet Time Snack"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Buttermilk  "
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="38dp"
                    android:paddingLeft="6dp"
                    android:src="@drawable/x4">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="38dp"
                    android:paddingLeft="-20dp"
                    android:src="@drawable/replacement">

                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:textStyle="bold"
                    android:paddingLeft="60dp"
                    android:text="Replacement"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="
⁕	6 Eggs Omelet + Chapatti – 5 Boiled Eggs + Toasts \n
⁕	Milk Tea – Milk \n
⁕	Yogurt Strawberry Shake  - Yogurt Smoothie \n
⁕	Brown Rice + Cutlus  – Fish + Boiled Rice \n
⁕	Yogurt Fruit Salad  - Honey Porridge \n
⁕	Peanut Butter Toast – Butter Toast \n
⁕	Buttermilk – Almond Milk\n
"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>





            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="38dp"
                    android:paddingLeft="-20dp"
                    android:src="@drawable/workout">

                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:textStyle="bold"
                    android:paddingLeft="60dp"
                    android:text="Workout Plan"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="
⁕   20 Squats \n
⁕	35 Push Ups \n
⁕	20 Walking lunges \n
⁕	30 Triceps Dips \n
⁕	35 Pull-ups \n

"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>





            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </ScrollView>


</RelativeLayout>