<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fullbodyChallenge">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tooolbar"

            app:title="Fitness Pack"

            android:background="@color/colorapp"

            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="79dp"

            android:layout_height="38dp"
            android:src="@drawable/ic_arrow_back_24"

            android:layout_marginLeft="340dp"
            android:layout_marginTop="10dp"

            >

        </ImageView>
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollableContents"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tooolbar"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <ImageView

                    android:id="@+id/fulbody"
                    android:layout_width="425dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="-16dp"
                    android:paddingLeft="-14dp"
                    android:src="@drawable/fullbody"
                    >


                </ImageView>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginTop="70dp"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="0"
                        android:elevation="6dp"
                        android:id="@+id/week1"
                        android:backgroundTint="@color/colorapp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginLeft="26dp"
                        android:layout_margin="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="WEEK 1"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        android:id="@+id/week2"
                        android:elevation="6dp"
                        android:backgroundTint="@color/colorapp"
                        android:layout_marginLeft="70dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="WEEK 2"></TextView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        android:elevation="6dp"
                        android:id="@+id/week3"
                        android:backgroundTint="@color/colorapp"
                        android:layout_marginLeft="26dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp"
                        android:layout_marginTop="40dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="WEEK 3"></TextView>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        android:elevation="6dp"
                        android:id="@+id/week4"
                        android:backgroundTint="@color/colorapp"
                        android:layout_marginLeft="70dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp"
                        android:layout_marginTop="40dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="WEEK 4"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>



</RelativeLayout>