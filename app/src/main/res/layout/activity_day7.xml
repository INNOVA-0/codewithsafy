<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day7">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tooolbar"
            app:title="Fitness Pack"
            android:background="@color/colorapp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIET PLAN FOR WEIGHT LOSS"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backarrowday2"
            android:layout_width="79dp"
            android:layout_height="38dp"
            android:src="@drawable/arrowbackfordiet"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="-1dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 7"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="160dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_below="@id/header" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Breakfast"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="2 egg whites omelet with mixed veggies + Green tea"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="38dp"
                    android:paddingLeft="6dp"
                    android:src="@drawable/xx10">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Mid Morning Snack"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Apple (small bowl)"

                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="38dp"
                    android:paddingLeft="6dp"
                    android:src="@drawable/xxx4"></ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Lunch"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Veggie soup + 1 chapatti"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/xx8">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:text="Dinner"  android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="1 chapatti + chicken curry"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>
                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/xx5">
                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="Bet Time Snack"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"

                    android:gravity=""
                    android:paddingLeft="85dp"
                    android:text="Cinnamon water  "
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="38dp"
                    android:paddingLeft="6dp"
                    android:src="@drawable/xx9">

                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="38dp"
                    android:paddingLeft="-20dp"
                    android:src="@drawable/replacement">

                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:textStyle="bold"
                    android:paddingLeft="60dp"
                    android:text="Replacement"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="
⁕	2 egg whites omelet with mixed veggies – 2 boiled   eggs \n
⁕	Apple ( small bowl) – 2 oranges \n
⁕	Veggie soup + 1 chapatti \n
⁕	1 chapatti + chicken curry – beans salad \n
⁕	Cinnamon Water – honey lemon water \n




"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>





            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-8dp"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"

                >

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="38dp"
                    android:paddingLeft="-20dp"
                    android:src="@drawable/workout">

                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:textStyle="bold"
                    android:paddingLeft="60dp"
                    android:text="Workout Plan"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity=""
                    android:paddingLeft="10dp"
                    android:text="⁕ Rest day"
                    android:textColor="@color/black"
                    android:textSize="15sp">


                </TextView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>