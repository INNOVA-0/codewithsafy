            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            android:elevation="6dp"
            android:id="@+id/day7"
            android:backgroundTint="@color/colorapp"
