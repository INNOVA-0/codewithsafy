<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workoutplan">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tooolbar"

            app:title="Fitness Pack"

            android:background="@color/colorapp"

            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="79dp"

            android:layout_height="38dp"
            android:src="@drawable/ic_arrow_back_24"

            android:layout_marginLeft="340dp"
            android:layout_marginTop="10dp"

            >

        </ImageView>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="-30dp"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="80dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#FFFFFF"

        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Full Body Workout"

            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="25sp">


        </TextView>
        <ImageView
            android:id="@+id/fulbody24"
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="2dp"

            android:src="@drawable/fullbody"

            >

        </ImageView>



    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="5dp"
            android:elevation="4dp"
            app:cardBackgroundColor="#FFFFFF"

            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="ABS WORKOUT"

                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="25sp">


            </TextView>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="2dp"
                android:id="@+id/abs"
                android:src="@drawable/abss"

                >

            </ImageView>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="5dp"
            android:elevation="4dp"
            app:cardBackgroundColor="#FFFFFF"

            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="THIGH WORKOUT"

                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="25sp">


            </TextView>
            <ImageView
                android:id="@+id/thigh"

                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="2dp"
                android:src="@drawable/thigh">
            </ImageView>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="5dp"
            android:elevation="4dp"
            app:cardBackgroundColor="#FFFFFF"

            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="BUTT WORKOUT"

                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="25sp">


            </TextView>
            <ImageView
                android:id="@+id/butt"

                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="2dp"
                android:src="@drawable/buttw">
            </ImageView>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="5dp"
            android:elevation="4dp"
            app:cardBackgroundColor="#FFFFFF"

            app:cardUseCompatPadding="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="ARMS WORKOUT"

                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="25sp">


            </TextView>
            <ImageView
                android:id="@+id/arms"

                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="2dp"
                android:src="@drawable/arms">
            </ImageView>



        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>